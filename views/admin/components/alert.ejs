

<% if (error_msg) { %>
<div role="alert"
class="alert relative border rounded-md px-5 py-4 mb-3 bg-secondary/70 border-secondary/70 text-slate-500 dark:border-darkmode-400 dark:bg-darkmode-400 dark:text-slate-300">
<%= error_msg %>
</div>
<% } %>

<% if (success_msg) { %>
<div role="alert"
    class="alert relative border rounded-md px-5 py-4 mb-3 bg-secondary/70 border-secondary/70 text-slate-500 dark:border-darkmode-400 dark:bg-darkmode-400 dark:text-slate-300">
    <%= success_msg %>
</div>
<% } %>